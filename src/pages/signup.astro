---
import Layout from '../layouts/Layout.astro';
import AuthenticationModal from '../components/register/AuthenticationModal.svelte';

const pageTitle = 'Early Access Registration';
---
<Layout>
  <main class="min-h-screen bg-gray-50 text-gray-800 dark:bg-gray-900 dark:text-white flex justify-center items-center">
    <div
    aria-hidden="true"
    class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20 pointer-events-none"
    >
    <div class="blur-[106px] h-56 bg-gradient-to-br from-secondary to-indigo-400 dark:from-blue-700"></div>
    <div class="blur-[106px] h-32 bg-gradient-to-r from-gray-400 to-sky-300 dark:to-purple-600"></div>
    </div>
  
    <section class="text-center p-4">
      <div class="space-y-8">
        <h1 class="text-4xl font-bold">{pageTitle}</h1>
        <p class="text-gray-300 max-w-md mx-auto">With Timeless Dispatch, your words and files are not just sent; they're preserved for posterity on the Arweave network. Sign up now to embrace the permanence of digital interaction.</p>
        <AuthenticationModal client:load />
      </div>
    </section>
  </main>
</Layout>

